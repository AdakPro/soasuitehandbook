        <partnerLink name="DiscussNationalSecurityCheckRequest.TaskService_1" partnerLinkType="taskservice:TaskService"
                     partnerRole="TaskService" myRole="TaskServiceCallbackListener"/>
        <partnerLink name="ManualScreeningOfSecurityAccreditationRequest.TaskService_1"
                     partnerLinkType="taskservice:TaskService" partnerRole="TaskService"
                     myRole="TaskServiceCallbackListener"/>
    </partnerLinks>

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        VARIABLES                                                        
        List of messages and XML documents used within this BPEL process 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <variables>
        <!-- Reference to the message passed as input during initiation -->
        <variable name="inputVariable" messageType="ns1:requestForAirportAccreditationRequestMessage"/>
        <variable name="synchOutputVariable" messageType="ns1:requestForAirportAccreditationRequestMessage"/>
