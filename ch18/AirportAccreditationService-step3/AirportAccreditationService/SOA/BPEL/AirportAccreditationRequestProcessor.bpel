        <variable name="AirportAccreditationRequestIdentifier" type="xsd:string"/>
        <variable name="DiscussNationalSecurityCheckRequest1_globalVariable" messageType="taskservice:taskMessage"/>
        <variable name="ManualScreeningOfSecurityAccreditationRequest1_globalVariable"
                  messageType="taskservice:taskMessage"/>
    </variables>

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
       ORCHESTRATION LOGIC                                               
       Set of activities coordinating the flow of messages across the    
       services integrated within this business process                  
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <sequence name="main">
<!-- Receive input from requestor. (Note: This maps to operation defined in AirportAccreditationRequestProcessor.wsdl) -->
        <receive name="receiveInput" partnerLink="AirportAccreditationService"
                 portType="ns1:AirportAccreditationService" operation="requestAirportAccreditation" variable="inputVariable" createInstance="yes"/>
        <assign name="initialization">
            <copy>
                <from>concat( xp20:current-dateTime(),':' ,oraext:generate-guid())</from>
                <to>$AirportAccreditationRequestIdentifier</to>
            </copy>
        </assign>
        <scope name="AirportSecurityAccreditationProcess">
            <variables>
                <variable name="globalProcessStatus" type="xsd:string"/>
                <variable name="globalProcessState" type="ns1:AirportAccreditationProcessStateType"/>
            </variables>
            <eventHandlers>
                <onEvent partnerLink="AirportAccreditationService"
                         operation="retrieveStatusOfAirportAccreditationRequest"
                         portType="ns1:AirportAccreditationService" variable="retrieveStatusRequest"
                         element="ns1:RetrieveStatusOfAirportAccreditationRequestRequest">
                    <scope name="ReplyToStatusRequest">
                        <empty name="Empty18"/>
                    </scope>
                </onEvent>
                <onEvent bpelx:name="RequestToCancel" partnerLink="AirportAccreditationService"
                         operation="cancelRequestForAirportAccreditation" portType="ns1:AirportAccreditationService"
                         variable="cancelRequest" element="ns1:CancelRequestForAirportAccreditationRequest">
                    <scope name="HandleCancelRequest">
                        <empty name="Empty19"/>
                    </scope>
                </onEvent>
            </eventHandlers>
            <sequence>
                <assign name="InitProcessStatus">
                    <copy>
                        <from>'initialized'</from>
                        <to>$globalProcessStatus</to>
                    </copy>
                </assign>
                <scope name="InitializationandValidation">
                    <sequence name="Sequence3">
                        <scope name="ValidateRequest">
                            <empty name="Empty16"/>
                        </scope><assign name="SetProcessStatusValidated"
                                        xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable">
      
   <copy>
         <from>'validation complete'</from>
         <to>$globalProcessStatus</to>
      </copy></assign><scope name="RetrieveRequestorAndCompany">
                            <variables>
                                <variable name="RetrieveRequestor_getUser_InputVariable"
                                          messageType="ns2:getUserRequestMessage"/>
                                <variable name="RetrieveRequestor_getUser_OutputVariable"
                                          messageType="ns2:getUserResponseMessage"/>
                                <variable name="RetrieveCompany_getOrganization_InputVariable"
                                          messageType="ns2:getOrganizationRequestMessage"/>
                                <variable name="RetrieveCompany_getOrganization_OutputVariable"
                                          messageType="ns2:getOrganizationResponseMessage"/>
                            </variables>
                            <sequence name="Sequence4">
                                <assign name="AssignRequestorUserId">
                                    <copy>
                                        <from>$inputVariable.part1/ns1:RequestorId</from>
                                        <to>$RetrieveRequestor_getUser_InputVariable.part1/ns2:UserId</to>
                                    </copy>
                                </assign>
                                <invoke name="RetrieveRequestor" bpelx:invokeAsDetail="no"
                                        partnerLink="LDAPMediator.LDAPMediator" portType="ns2:LdapService"
                                        operation="getUser" inputVariable="RetrieveRequestor_getUser_InputVariable"
                                        outputVariable="RetrieveRequestor_getUser_OutputVariable"/>
                                <assign name="AssignCompanyId">
                                    <copy>
                                        <from>$inputVariable.part1/ns1:RequestingOrganizationId</from>
                                        <to>$RetrieveCompany_getOrganization_InputVariable.part1/ns2:OrganizationId</to>
                                    </copy>
                                </assign>
                                <invoke name="RetrieveCompany" bpelx:invokeAsDetail="no"
                                        partnerLink="LDAPMediator.LDAPMediator" portType="ns2:LdapService"
                                        operation="getOrganization"
                                        inputVariable="RetrieveCompany_getOrganization_InputVariable"
                                        outputVariable="RetrieveCompany_getOrganization_OutputVariable"/><assign name="SetProcessStatusLdapRetrieved"
                                                                                                                 xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable">
      
   <copy>
         <from>'requestor and company retrieved from LDAP'</from>
         <to>$globalProcessStatus</to>
      </copy></assign>
                                <assign name="UpdateProcessState">
                                    <copy ignoreMissingFromData="yes">
                                        <from>$RetrieveRequestor_getUser_OutputVariable.part1/ns2:EmailAddress</from>
                                        <to>$globalProcessState/ns1:RequestorEmailId</to>
                                    </copy>
                                    <copy>
                                        <from>$inputVariable.part1/ns1:StaffMemberToAccredit/ns1:EmployeeNumber</from>
                                        <to>$globalProcessState/ns1:EmployeeNumber</to>
                                    </copy>
                                    <copy ignoreMissingFromData="yes">
                                        <from>$RetrieveRequestor_getUser_OutputVariable.part1/ns2:SaibotAirportSecurity</from>
                                        <to>$globalProcessState/ns1:RequestorSASEC</to>
                                    </copy>
                                    <copy>
                                        <from>$inputVariable.part1/ns1:RequestorId</from>
                                        <to>$globalProcessState/ns1:RequestorId</to>
                                    </copy>
                                    <copy>
                                        <from>$inputVariable.part1/ns1:RequestingOrganizationId</from>
                                        <to>$globalProcessState/ns1:RequestingOrganizationId</to>
                                    </copy>
                                    <copy ignoreMissingFromData="yes">
                                        <from>$RetrieveCompany_getOrganization_OutputVariable.part1/ns2:SaibotAirportSecurity</from>
                                        <to>$globalProcessState/ns1:CompanySASEC</to>
                                    </copy>
                                </assign>
                            </sequence>
                        </scope>
                        <scope name="ReturnSynchronousResponse">
                            <variables>
                                <variable name="SynchronousReply_requestAirportAccreditation_OutputVariable"
                                          messageType="ns1:requestForAirportAccreditationResponseMessage"/>
                            </variables>
                            <sequence name="Sequence5"><assign name="SetProcessStatusSynchReplied"
                                                                                                                          xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable">
      
   <copy>
         <from>'synchronous response was sent'</from>
         <to>$globalProcessStatus</to>
      </copy></assign>
                                <assign name="AssignSynchronousOutput">
                                    <copy>
                                        <from>$AirportAccreditationRequestIdentifier</from>
                                        <to>$SynchronousReply_requestAirportAccreditation_OutputVariable.part1/ns1:AirportAccreditationRequestIdentifier</to>
                                    </copy>
                                    <copy>
                                        <from>$inputVariable.part1/ns1:RequestingOrganizationId</from>
                                        <to>$SynchronousReply_requestAirportAccreditation_OutputVariable.part1/ns1:RequestingOrganizationId</to>
                                    </copy>
                                    <copy>
                                        <from>$inputVariable.part1/ns1:RequestorId</from>
                                        <to>$SynchronousReply_requestAirportAccreditation_OutputVariable.part1/ns1:RequestorId</to>
                                    </copy>
                                    <copy>
                                        <from>$inputVariable.part1/ns1:StaffMemberToAccredit/ns1:EmployeeNumber</from>
                                        <to>$SynchronousReply_requestAirportAccreditation_OutputVariable.part1/ns1:EmployeeNumber</to>
                                    </copy>
                                </assign>
                                <reply name="SynchronousReply"
                                       variable="SynchronousReply_requestAirportAccreditation_OutputVariable"
                                       partnerLink="AirportAccreditationService"
                                       portType="ns1:AirportAccreditationService"
                                       operation="requestAirportAccreditation"/>
                            </sequence></scope>
                    </sequence>
                </scope>
                <scope name="SecurityChecks">
                    <variables>
                        <variable name="NationalSecurityCheckResult" type="xsd:string"/>
                        <variable name="DoThoroughBackgroundCheck" type="xsd:boolean"/>
                        <variable name="ScrutinyLevel" type="xsd:int"/>
                    </variables>
                    <sequence>
                        <flow name="PerformSecurityChecks">
                            <sequence name="RandomThoroughCheck">
                                <scope name="DetermineIfDoRandom">
                                    <variables>
                                        <variable name="DecisionNumber" type="xsd:int"/>
                                    </variables>
                                    <sequence name="Sequence8">
                                  
       
                                    <extensionActivity xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable">
     
      <bpelx:exec name="GenerateDecisionNumber" xmlns:bpelx="http://schemas.oracle.com/bpel/extension">
         <![CDATA[// Generate random number from java
try {
        java.util.Random random = new java.util.Random();
        int randInt = random.nextInt(100);
        setVariableData("DecisionNumber", randInt);       
 
}
// end Generate random number from java
catch(Exception e){}]]>
      </bpelx:exec>
   </extensionActivity>
                                        <assign name="AssignDoThoroughBackgroundCheck">
                                            <copy>
                                                <from>$DecisionNumber &gt;95</from>
                                                <to>$DoThoroughBackgroundCheck</to>
                                            </copy>
                                        </assign>
                                    </sequence></scope>
                                <if name="IfDoRandom">
                                    <condition>$DoThoroughBackgroundCheck</condition>
                                    <scope name="DoThoroughBackgroundCheck">
                                        <variables>
                                            <variable name="InvokeThoroughBackgroundCheck_process_InputVariable"
                                                      messageType="ns4:ThoroughBackgroundCheckRequestMessage"/>
                                            <variable name="ReceiveOutcomeThoroughBackgroundCheck_processResponse_InputVariable"
                                                      messageType="ns4:ThoroughBackgroundCheckResponseMessage"/>
                                        </variables>
                                        <sequence name="Sequence7">
                                            <invoke name="InvokeThoroughBackgroundCheck" bpelx:invokeAsDetail="no"
                                                    partnerLink="ThoroughBackgroundCheck.thoroughbackgroundcheck_client"
                                                    portType="ns4:ThoroughBackgroundCheck" operation="process"
                                                    inputVariable="InvokeThoroughBackgroundCheck_process_InputVariable"/>
                                            <empty name="Empty10"/>
                                            <receive name="ReceiveOutcomeThoroughBackgroundCheck"
                                                     partnerLink="ThoroughBackgroundCheck.thoroughbackgroundcheck_client"
                                                     portType="ns4:ThoroughBackgroundCheckCallback"
                                                     operation="processResponse"
                                                     variable="ReceiveOutcomeThoroughBackgroundCheck_processResponse_InputVariable"/>
                                        </sequence>
                                    </scope>
                                    <else>
                                        <empty name="DoNothing"/>
                                    </else>
                                </if>
                            </sequence>
                            <sequence name="NationalSecurityCheck">
                                <assign name="InitializeOutcome">
                                    <copy>
                                        <from>'Unclear'</from>
                                        <to>$NationalSecurityCheckResult</to>
                                    </copy>
                                </assign>
                                <while name="WhileNotClear">
                                    <condition>$NationalSecurityCheckResult = 'Unclear'</condition>
                                    <sequence>
                                        <scope name="RequestNationalSecurityCheck">
                                            <variables>
                                                <variable name="InvokeNationalSecurityRequestService_process_InputVariable"
                                                          messageType="ns3:NationalSecurityCheckServiceRequestMessage"/>
                                                <variable name="ReceiveNationalSecurityCheckOutcome_processResponse_InputVariable"
                                                          messageType="ns3:NationalSecurityCheckServiceResponseMessage"/>
                                            </variables>
                                            <sequence name="Sequence6">
                                                <assign name="PrepareNationalSecurityCheck">
                                                    <copy>
                                                        <from>$inputVariable.part1/ns1:StaffMemberToAccredit/ns1:EmployeeNumber</from>
                                                        <to>$InvokeNationalSecurityRequestService_process_InputVariable.payload/ns3:input</to>
                                                    </copy>
                                                </assign>
                                                <invoke name="InvokeNationalSecurityRequestService"
                                                        bpelx:invokeAsDetail="no"
                                                        partnerLink="NationalSecurityCheckService.NationalSecurityCheckService"
                                                        portType="ns3:NationalSecurityCheckService"
                                                        operation="process"
                                                        inputVariable="InvokeNationalSecurityRequestService_process_InputVariable"/>
                                                <receive name="ReceiveNationalSecurityCheckOutcome"
                                                         partnerLink="NationalSecurityCheckService.NationalSecurityCheckService"
                                                         portType="ns3:NationalSecurityCheckServiceCallback"
                                                         operation="processResponse"
                                                         variable="ReceiveNationalSecurityCheckOutcome_processResponse_InputVariable"/>
                                                <assign name="SetNationalSecurityCheckResult">
                                                    <copy>
                                                        <from>$ReceiveNationalSecurityCheckOutcome_processResponse_InputVariable.payload/ns3:result</from>
                                                        <to>$NationalSecurityCheckResult</to>
                                                    </copy>
                                                </assign>
                                            </sequence>
                                        </scope>
                                        <if name="IfOutCome">
                                            <documentation>
                                                <![CDATA[OK]]>
                                            </documentation>
                                            <condition>$NationalSecurityCheckResult='OK'</condition>
                                            <empty name="Empty8"/>
                                            <elseif>
                                                <documentation>
                                                    <![CDATA[NOK]]>
                                                </documentation>
                                                <condition>$NationalSecurityCheckResult='NOTOK'</condition>
                                                <empty name="Empty7"/>
                                            </elseif>
                                            <else>
                                                <documentation>
                                                    <![CDATA[Unclear]]>
                                                </documentation>
                                                <scope name="Discuss">
                                                    <sequence name="Sequence10">
                                                        <empty name="Empty9"/>
                                                        <scope name="DiscussNationalSecurityCheckRequest1"
                                                               xmlns:wf="http://schemas.oracle.com/bpel/extensions/workflow"
                                                               wf:key="DiscussNationalSecurityCheckRequest1_globalVariable">
                                                            <bpelx:annotation>
                                                                <bpelx:pattern patternName="bpelx:workflow"></bpelx:pattern>
                                                            </bpelx:annotation>
                                                            <variables>
                                                                <variable name="initiateTaskInput"
                                                                          messageType="taskservice:initiateTaskMessage"/>
                                                                <variable name="initiateTaskResponseMessage"
                                                                          messageType="taskservice:initiateTaskResponseMessage"/>
                                                            </variables>
                                                            <sequence>
                                                                <assign name="DiscussNationalSecurityCheckRequest1_AssignTaskAttributes">
                                                                    <copy>
                                                                        <from>concat(string('Discuss national security check for '), concat($inputVariable.part1/ns1:StaffMemberToAccredit/ns1:FirstName, ' ', $inputVariable.part1/ns1:StaffMemberToAccredit/ns1:LastName,' SSN: ', $inputVariable.part1/ns1:StaffMemberToAccredit/ns1:IdentityDetails/ns1:SocialSecurityNumber), string(' - currently deemed unclear'))</from>
                                                                        <to variable="initiateTaskInput" part="payload"><query>task:task/task:title</query></to>
                                                                    </copy>
                                                                    <copy>
                                                                        <from>number(3)</from>
                                                                        <to variable="initiateTaskInput" part="payload"><query>task:task/task:priority</query></to>
                                                                    </copy>
                                                                    <copy>
                                                                        <from><literal><payload xmlns="http://xmlns.oracle.com/bpel/workflow/task">
 <SubjectToCheck xmlns="http://xmlns.oracle.com/bpel/workflow/task"/>
</payload></literal></from>
                                                                        <to variable="initiateTaskInput" part="payload"><query>task:task/task:payload</query></to>
                                                                    </copy>
                                                                    <copy>
                                                                        <from variable="inputVariable" part="part1"><query>ns1:StaffMemberToAccredit</query></from>
                                                                        <to variable="initiateTaskInput" part="payload"><query>task:task/task:payload/task:SubjectToCheck</query></to>
                                                                    </copy>
                                                                </assign>
                                                                <invoke name="initiateTask_DiscussNationalSecurityCheckRequest1"
                                                                        partnerLink="DiscussNationalSecurityCheckRequest.TaskService_1"
                                                                        operation="initiateTask"
                                                                        portType="taskservice:TaskService"
                                                                        inputVariable="initiateTaskInput"
                                                                        outputVariable="initiateTaskResponseMessage"/>
                                                                <receive name="receiveCompletedTask_DiscussNationalSecurityCheckRequest1"
                                                                         partnerLink="DiscussNationalSecurityCheckRequest.TaskService_1"
                                                                         portType="taskservice:TaskServiceCallback"
                                                                         operation="onTaskCompleted"
                                                                         variable="DiscussNationalSecurityCheckRequest1_globalVariable"
                                                                         createInstance="no"/>
                                                            </sequence>
                                                        </scope>
                                                        <if name="taskIf">
                                                            <documentation>
                                                                <![CDATA[Task outcome is OK]]>
                                                            </documentation>
                                                            <condition>$DiscussNationalSecurityCheckRequest1_globalVariable.payload/task:systemAttributes/task:outcome = 'OK'</condition>
                                                            <sequence>
                                                                <assign name="CopyPayloadFromTask">
                                                                    <copy>
                                                                        <from variable="DiscussNationalSecurityCheckRequest1_globalVariable"
                                                                              part="payload"><query>task:payload/task:SubjectToCheck</query></from>
                                                                        <to variable="inputVariable" part="part1"><query>ns1:StaffMemberToAccredit</query></to>
                                                                    </copy>
                                                                </assign>
                                                            </sequence>
                                                            <else>
                                                                <sequence>
                                                                    <assign name="CopyPayloadFromTask">
                                                                        <copy>
                                                                            <from variable="DiscussNationalSecurityCheckRequest1_globalVariable"
                                                                                  part="payload"><query>task:payload/task:SubjectToCheck</query></from>
                                                                            <to variable="inputVariable" part="part1"><query>ns1:StaffMemberToAccredit</query></to>
                                                                        </copy>
                                                                    </assign>
                                                                </sequence>
                                                            </else>
                                                        </if>
                                                    </sequence>
                                                </scope>
                                            </else>
                                        </if>
                                    </sequence>
                                </while>
                            </sequence>
                            <sequence name="InternalScreening">
                                <scope name="DetermineScreeningIntensity">
                                    <sequence name="Sequence11">
                                        <empty name="Empty13"/>
                                        <assign name="SetScrutinyLevel">
                                            <copy>
                                                <from>2</from>
                                                <to>$ScrutinyLevel</to>
                                            </copy>
                                        </assign>
                                    </sequence>
                                </scope>
                                <flow name="Flow2">
                                    <sequence name="Sequence">
                                        <scope name="AutomatedEvaluation">
                                            <empty name="Empty11"/>
                                        </scope>
                                    </sequence>
                                    <sequence name="Sequence1">
                                        <if name="IfAutomatedProcessing">
                                            <condition>$ScrutinyLevel=0</condition>
                                            <empty name="DoNothing"/>
                                            <else>
                                                <documentation>
                                                    <![CDATA[manualEvaluation]]>
                                                </documentation>
                                                <scope name="ManualRequestScreening">
                                                    <sequence name="Sequence12">
                                                        <scope name="ManualScreeningOfSecurityAccreditationRequest1"
                                                               xmlns:wf="http://schemas.oracle.com/bpel/extensions/workflow"
                                                               wf:key="ManualScreeningOfSecurityAccreditationRequest1_globalVariable">
                                                            <bpelx:annotation>
                                                                <bpelx:pattern patternName="bpelx:workflow"></bpelx:pattern>
                                                            </bpelx:annotation>
                                                            <variables>
                                                                <variable name="initiateTaskInput"
                                                                          messageType="taskservice:initiateTaskMessage"/>
                                                                <variable name="initiateTaskResponseMessage"
                                                                          messageType="taskservice:initiateTaskResponseMessage"/>
                                                            </variables>
                                                            <sequence>
                                                                <assign name="ManualScreeningOfSecurityAccreditationRequest1_AssignTaskAttributes">
                                                                    <copy>
                                                                        <from>number(3)</from>
                                                                        <to variable="initiateTaskInput" part="payload"><query>task:task/task:priority</query></to>
                                                                    </copy>
                                                                    <copy>
                                                                        <from><literal><payload xmlns="http://xmlns.oracle.com/bpel/workflow/task">
 <SecurityAccreditationRequest xmlns="http://xmlns.oracle.com/bpel/workflow/task"/>
 <RequestorSaibotSecurityLevel xmlns="http://xmlns.oracle.com/bpel/workflow/task"/>
 <CompanySaibotSecurityLevel xmlns="http://xmlns.oracle.com/bpel/workflow/task"/>
 <ScrutinyLevel xmlns="http://xmlns.oracle.com/bpel/workflow/task"/>
</payload></literal></from>
                                                                        <to variable="initiateTaskInput" part="payload"><query>task:task/task:payload</query></to>
                                                                    </copy>
                                                                    <copy>
                                                                        <from variable="inputVariable" part="part1"/>
                                                                        <to variable="initiateTaskInput" part="payload"><query>task:task/task:payload/task:SecurityAccreditationRequest</query></to>
                                                                    </copy>
                                                                    <copy>
                                                                        <from variable="globalProcessState"><query>ns1:RequestorSASEC</query></from>
                                                                        <to variable="initiateTaskInput" part="payload"><query>task:task/task:payload/task:RequestorSaibotSecurityLevel</query></to>
                                                                    </copy>
